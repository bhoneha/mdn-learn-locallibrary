extends layout

block content

  h1 #{title}: #{book.name}
  if bookinstances.length 
    p #[strong Delete the following book copies before attempting to delete this book.]
    h4 Copies 
      dl
        each copy in bookinstances 
          ul 
            li
              a(href=copy.url) #{copy._id}
  else
    p #[strong Do you really want to delete this book?]

    form(method='POST')
      div.form-group
        input#bookid.form-control(type='hidden', name='bookid', value=book._id )

      button.btn.btn-primary(type='submit') Delete
